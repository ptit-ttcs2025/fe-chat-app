# ===========================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy file nay va rename thanh .env, .env.development hoac .env.production
# ===========================

# API Configuration
# Development: http://localhost:8080/api/v1
# Production: https://ttcs-chat-app-z86ml.ondigitalocean.app/api/v1
VITE_API_BASE_URL=

# WebSocket Configuration
# Development: ws://localhost:8080/api/v1/ws
# Production: https://ttcs-chat-app-z86ml.ondigitalocean.app/api/v1/ws (SockJS over HTTPS)
# Note: Use https:// for production (NOT wss://), SockJS will auto-upgrade to WebSocket
VITE_WS_URL=

# Image URL (relative or CDN URL)
VITE_IMAGE_URL=/assets/img/

# App Configuration
VITE_APP_VERSION=1.0.0

# API Settings
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# Feature Flags (true/false)
VITE_FEATURE_VOICE_MESSAGES=false
VITE_FEATURE_VIDEO_CALLS=false
VITE_FEATURE_FILE_SHARING=true
VITE_FEATURE_MESSAGE_REACTIONS=false
VITE_FEATURE_MESSAGE_EDITING=true
VITE_FEATURE_MESSAGE_FORWARDING=true
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_GROUP_CHAT=true
VITE_FEATURE_GROUP_ADMIN=false

# Development Settings
VITE_ENABLE_LOGGING=true
VITE_ENABLE_PERFORMANCE=false
VITE_USE_MOCK_DATA=false
VITE_LOG_LEVEL=info
